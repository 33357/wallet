<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InprotWalletActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_inprot_mnemonic"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="助记词导入"/>
        <Button
            android:id="@+id/btn_inprot_keystore"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="keystore导入"/>
        <Button
            android:id="@+id/btn_inprot_key"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="私钥导入"/>
    </LinearLayout>

        <EditText
            android:id="@+id/et_data_inprot"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="请输入助记词或者keystore或者私钥，如果导入keystore则需要输入原始密码"/>


        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="请输入密码"/>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>